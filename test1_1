public class Dog //类声明（与类体构成类的定义）
{//类体：成员变量和方法
	int furcolor;//创建成员变量
	float height;//创建成员变量
	float weight;//创建成员变量
	
	//Dog(){}默认的构造方法（1：如果使用了带参数的构造方法，默认方法还可以使用吗，2：此时再创建一个无参数无语句的构造方法，还可以做什么。）
	Dog(int b)
	{
		//int a;(方法内的局部变量未赋值，错误语句)
		int a=1;//（a可以使用是因为局部变量中的范围只在方法内）
		//int b=1;(错误：局部变量b重复。)（局部变量：参数 and方法内定义的变量）
		System.out.println(a);
		
	}
	void CatchMouse(Mouse a) //创建局部变量a，a是类的对象，局部变量的类型还可以是对象，接口等
	{
		System.out.println("我抓住老鼠了");
		a.scream();//用对象a使用了Mouse类中的方法scream
	}
	public static void main(String[] args) {
		Dog d=new Dog(2);//声明对象d，使用默认构造方法为对象b分配变量
		Mouse m=new Mouse();//类名Mouse 对象名m（声明了对象m），使用new运算符与Mouse类的构造方法为m分配变量（为什么叫分配变量）
		d.CatchMouse(m);//Dog类的对象d使用了Dog类的方法
	}
}
public class Mouse {
	public void scream() {
		System.out.println("我被狗咬到了，好痛");
	}
}
